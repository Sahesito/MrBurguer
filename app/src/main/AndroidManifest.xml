<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MrBurguer">
        <activity
            android:name=".activity.auth.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".activity.favorite.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".activity.cart.CartActivity"
            android:exported="false" />
        <activity
            android:name=".activity.details.DetailEachFoodActivity"
            android:exported="false" />
        <activity
            android:name=".activity.itemsList.ItemsListActivity"
            android:exported="false" />
        <activity
            android:name=".activity.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.dashboard.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MrBurguer" />
    </application>

</manifest>